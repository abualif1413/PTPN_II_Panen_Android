                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="50px"
                android:layout_marginRight="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JLH. JANJANG (2)"></TextView>

                <EditText
                    android:id="@+id/txtJlhJanjang2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:inputType="text|numberDecimal"
                    android:selectAllOnFocus="true" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="70px"
                android:layout_marginRight="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JLH. BRONDOLAN (KG) (2)"></TextView>

                <EditText
                    android:id="@+id/txtJlhBrondolan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:inputType="text|numberDecimal"
                    android:selectAllOnFocus="true" />
            </LinearLayout>
            <!-- End OF : Blok, janjang, brondolan 2 -->


            <!-- Blok, janjang, brondolan 3 -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="70px"
                android:layout_marginRight="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLOK (3)"></TextView>

                <Spinner
                    android:id="@+id/listBlok3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="50px"
                android:layout_marginRight="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JLH. JANJANG (3)"></TextView>

                <EditText
                    android:id="@+id/txtJlhJanjang3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:inputType="text|numberDecimal"
                    android:selectAllOnFocus="true" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="70px"
                android:layout_marginRight="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JLH. BRONDOLAN (KG) (3)"></TextView>

                <EditText
                    android:id="@+id/txtJlhBrondolan3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:inputType="text|numberDecimal"
                    android:selectAllOnFocus="true" />
            </LinearLayout>
            <!-- End OF : Blok, janjang, brondolan 3 -->


            <Button
                android:id="@+id/btnSimpanTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="70px"
                android:layout_marginRight="50px"
                android:background="@color/colorPrimary"
                android:enabled="true"
                android:paddingHorizontal="70px"
                android:paddingVertical="20px"
                android:text="Simpan data trip"
                android:textColor="#FFFFFF"></Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>