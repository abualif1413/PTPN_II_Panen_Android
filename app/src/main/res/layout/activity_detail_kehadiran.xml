<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar_001" android:id="@+id/toolbar" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:paddingHorizontal="20px"
        android:paddingBottom="20px"
        android:background="@color/colorPrimary">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:paddingRight="30px"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailKehadiran_tvNamaPemanen"
                android:text="- Nama Pemanen -"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:textStyle="bold">

            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Absen"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:paddingRight="30px"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailKehadiran_tvQRCode"
                android:text="- Nama Pemanen -"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:textStyle="bold">

            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:paddingRight="30px"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailKehadiran_tvUntukTanggal"
                android:text="- Nama Pemanen -"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:textStyle="bold">

            </TextView>

        </TableRow>

    </TableLayout>



</LinearLayout>