<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kehadiranPekerja_txtNamaPekerja"
        android:text="Nama Pekerja"
        android:textStyle="bold"
        android:textSize="8pt"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20px"
        android:layout_marginTop="15px"></TextView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="15px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kehadiranPekerja_txtJenisKehadiran"
            android:text="Hadirkan kesenangan"
            android:gravity="left"
            android:textSize="7pt"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kehadiranPekerja_txtWaktuKehadiran"
            android:text="2019-10-08 08:00:00"
            android:gravity="right"
            android:textSize="7pt"></TextView>

    </LinearLayout>

</LinearLayout>