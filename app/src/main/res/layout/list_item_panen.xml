<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/panen_txtNamaPekerja"
        android:text="Nama Pekerja"
        android:textStyle="bold"
        android:textSize="8pt"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20px"
        android:layout_marginTop="15px"></TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="20px">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorZebra"
            android:paddingLeft="20px"
            android:paddingTop="10px"
            android:paddingBottom="10px">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="TPH"
                android:textSize="7pt"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/panen_txtTph"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="- Data TPH -"
                android:textSize="7pt"></TextView>

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Blok"
                android:textSize="7pt"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/panen_txtBlok"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="- Data Blok -"
                android:textSize="7pt"></TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:paddingTop="10px"
            android:paddingBottom="10px">

            <TextView
                android:layout_height="wrap_content"
                android:text="Jlh. Jjg"
                android:textSize="7pt"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/panen_txtJlhJanjang"
                android:layout_height="wrap_content"
                android:text="- Data Janjang -"
                android:textSize="7pt"></TextView>

            <TextView
                android:layout_height="wrap_content"
                android:text="Brd"
                android:textSize="7pt"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/panen_txtBrondolan"
                android:layout_height="wrap_content"
                android:text="- Data Brondolan -"
                android:textSize="7pt"></TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorZebra"
            android:paddingLeft="20px"
            android:paddingTop="10px"
            android:paddingBottom="10px">

            <TextView
                android:layout_height="wrap_content"
                android:text="Alat"
                android:textSize="7pt"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/panen_txtAlat"
                android:layout_span="3"
                android:layout_height="wrap_content"
                android:text="- Data Alat -"
                android:textSize="7pt"></TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:paddingTop="10px"
            android:paddingBottom="10px">

            <TextView
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textSize="7pt"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/panen_txtStatusUpload"
                android:layout_height="wrap_content"
                android:text="- Data Brondolan -"
                android:textSize="7pt"
                android:layout_span="3"
                android:textColor="#966227"></TextView>

        </TableRow>

    </TableLayout>

</LinearLayout>